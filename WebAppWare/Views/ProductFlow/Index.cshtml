@model ProductFlowSearchModel

<h4 class="pb-2">Przepływ produktów we wszystkich magazynach</h4>

<form method="post" class="row" asp-controller="ProductFlow" asp-action="Search">
<div class="container">
	<div class="row">
		<div class="col-md-2">
			<label class="ms-2">Magazyn:</label>
			<input class="form-control border-0 shadow mb-4" asp-for="@Model.Warehouse" />
		</div>
		<div class="col-md-2">
			<label class="ms-2">Index:</label>
			<input class="form-control border-0 shadow mb-4" asp-for="@Model.ItemCode"/>
		</div>
		<div class="col-md-2">
			<label class="ms-2">Dostawca:</label>
			<input class="form-control border-0 shadow mb-4" asp-for="@Model.Supplier" />
		</div>

		<div class="col-md-2">
				<button type="submit" class="btn btn-success form-control mb-2">Szukaj</button>

		</div>

		<div class="col-md-2">
			<a class="btn btn-secondary mb-2" asp-controller="ProductFlow" asp-action="Index">Pokaż wszystkie</a>
		</div>
	</div>
</div>
</form>



<div class="col-9 row">

	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Typ
				</th>
				<th>
					Id ruchu
				</th>
				<th>
					Magazyn
				</th>
				<th>
					Index
				</th>
				<th>
					Ilość
				</th>
				<th>
					Dostawca
				</th>
				<th>
					Data utworzenia
				</th>
				<th>

				</th>
			</tr>
		</thead>

		<tbody>

			@foreach (var item in Model.ProductsFlow)
			{
				string action = "Delete";

				if (item.MovementType == MovementType.MM)
				{
					action = "DeleteMmM";
				}

				<tr>
					<td>
						@item.Id
					</td>
					<td>
						@item.MovementType
					</td>
					<td>
						@item.MovementId
					</td>
					<td>
						@if (item.WarehouseToId != null)
						{
							if (item.Quantity < 0)
							{
								@item.Warehouse
							}
							else
							{
								@item.WarehouseToIdName
							}
						}
						else
						{
							@item.Warehouse
						}						
					</td>
					<td>
						@item.ProductItemCode
					</td>
					<td>
						@item.Quantity
					</td>
					<td>
						@item.Supplier
					</td>
					<td>
						@item.CreationDate
					</td>
					<td>
						<a class="btn btn-danger mb-2" asp-controller="ProductFlow" asp-action="@action" asp-route-id="@item.Id">Usuń</a>
					</td>
				</tr>
			}

		</tbody>
	</table>

