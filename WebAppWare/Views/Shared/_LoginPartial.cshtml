@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



	@if (SignInManager.IsSignedIn(User))
	{
	<ul class="navbar-nav flex-grow-1">
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Witaj @User.Identity?.Name</a>
		</li>
		<li class="nav-item">
			<form class="form-inline" asp-controller="Home" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home"@* , new { area = "" } *@)">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>

		</li>
	</ul>
}
else
{
	<ul class="navbar-nav flex-grow-1">
@* 		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Witaj @User.Identity.Name</a>
		</li> *@
		<li class="nav-item">
			<form class="form-inline" asp-controller="Home" asp-action="Login">
				<a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Zaloguj</a>
			</form>

		</li>
	</ul>
}

